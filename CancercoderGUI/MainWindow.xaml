<Window x:Class="CancercoderGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CancercoderGUI"
        mc:Ignorable="d"
        Title="Cancercoder GUI" Height="350" Width="600">
    <Grid>
        <Menu x:Name="menuMain" VerticalAlignment="Top" Height="20">
            <MenuItem Header="File">
                <MenuItem Header="Open File(s)" Click="MenuItem_Click"/>
                <Separator></Separator>
                <MenuItem Header="Exit" Click="MenuItem_Click_1"/>
            </MenuItem>
            <MenuItem Header="Tools">
                <MenuItem Header="Settings" Click="MenuItem_Click_2"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About" Click="MenuItem_Click_3"/>
            </MenuItem>
        </Menu>
        <ListBox x:Name="listFiles" HorizontalAlignment="Left" Height="150" VerticalAlignment="Top" Width="275" Margin="297,149,0,0"/>
        <Label x:Name="labelOutput" Content="Output Folder..." HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,25,0,0"/>
        <TextBox x:Name="textOutputFolder" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="494" Margin="10,51,0,0"/>
        <Button x:Name="btnBrowseOutput" Content="Browse" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="509,51,0,0" Height="23" Click="btnBrowseOutput_Click"/>

    </Grid>
</Window>
